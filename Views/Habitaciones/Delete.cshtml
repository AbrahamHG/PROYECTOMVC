@model PROYECTOMVC.Models.Habitaciones

@{
    ViewBag.Title = "Eliminar Habitaciones";
}

<div class="container mt-4">
    <h2 class="text-danger">Eliminar Habitación</h2>
    <h3 class="text-warning">¿Estás seguro de que deseas eliminar esta habitación?</h3>

    <div class="shadow-sm p-4">
        <h4>Detalles de la Habitación</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Numero_Habitacion)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Numero_Habitacion)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.tipo)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.tipo)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Precio)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Precio)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Estatus)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Estatus)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
        </dl>
    </div>

    <div class="mt-3">
        <form method="post">
            @Html.AntiForgeryToken()

            <div class="form-actions">
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>
