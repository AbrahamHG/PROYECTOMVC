@model PROYECTOMVC.Models.Pagos

@{
    ViewBag.Title = "Eliminar Pago";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h2 class="card-title">Eliminar Pago</h2>
        </div>
        <div class="card-body">
            <h5 class="text-center text-danger">¿Estás seguro de que deseas eliminar este pago?</h5>
            <p class="text-center text-muted">Esta acción no se puede deshacer.</p>
            <hr />

            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Monto:</div>
                <div class="col-md-8">@Html.DisplayFor(model => model.Monto)</div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Fecha de Pago:</div>
                <div class="col-md-8">@Html.DisplayFor(model => model.Fecha_Pago)</div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Método de Pago:</div>
                <div class="col-md-8">@Html.DisplayFor(model => model.Metodo_Pago)</div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4 fw-bold">ID de Reserva:</div>
                <div class="col-md-8">@Html.DisplayFor(model => model.Reservas.ID_reserva)</div>
            </div>
        </div>
        <div class="card-footer text-end">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger me-2">Eliminar</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
            }
        </div>
    </div>
</div>
