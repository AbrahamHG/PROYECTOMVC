@model IEnumerable<PROYECTOMVC.Models.Pagos>

@{
    ViewBag.Title = "Lista de Pagos";
}

<h2 class="text-center">Lista de Pagos</h2>

<p class="text-end">
    @Html.ActionLink("Crear Nuevo Pago", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Monto)</th>
            <th>@Html.DisplayNameFor(model => model.Fecha_Pago)</th>
            <th>@Html.DisplayNameFor(model => model.Metodo_Pago)</th>
            <th>@Html.DisplayNameFor(model => model.Reservas.ID_reserva)</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Monto)</td>
                <td>@Html.DisplayFor(modelItem => item.Fecha_Pago)</td>
                <td>@Html.DisplayFor(modelItem => item.Metodo_Pago)</td>
                <td>@Html.DisplayFor(modelItem => item.Reservas.ID_reserva)</td>
                <td class="text-center">
                    @Html.ActionLink("Editar", "Edit", new { id = item.ID_Pago }, new { @class = "btn btn-warning btn-sm" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.ID_Pago }, new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_Pago }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
