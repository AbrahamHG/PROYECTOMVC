@model IEnumerable<PROYECTOMVC.Models.Reservas>

@{
    ViewBag.Title = "Lista de Reservas";
}

<h2 class="text-center">Lista de Reservas</h2>

<p class="text-end">
    @Html.ActionLink("Agregar Nueva Reserva", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.CheckIN)</th>
            <th>@Html.DisplayNameFor(model => model.CheckOUT)</th>
            <th>@Html.DisplayNameFor(model => model.Estatus)</th>
            <th>@Html.DisplayNameFor(model => model.Clientes.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Habitaciones.tipo)</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CheckIN)</td>
                <td>@Html.DisplayFor(modelItem => item.CheckOUT)</td>
                <td>@Html.DisplayFor(modelItem => item.Estatus)</td>
                <td>@Html.DisplayFor(modelItem => item.Clientes.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Habitaciones.tipo)</td>
                <td class="text-center">
                    @Html.ActionLink("Editar", "Edit", new { id = item.ID_reserva }, new { @class = "btn btn-warning btn-sm" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.ID_reserva }, new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_reserva }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
