@model PROYECTOMVC.Models.Reservas

@{
    ViewBag.Title = "Detalles de la Reserva";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title">Detalles de la Reserva</h2>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Check-IN:</div>
                <div class="col-md-8">@Html.DisplayFor(model => model.CheckIN)</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Check-OUT:</div>
                <div class="col-md-8">@Html.DisplayFor(model => model.CheckOUT)</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Estatus:</div>
                <div class="col-md-8">@Html.DisplayFor(model => model.Estatus)</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Cliente:</div>
                <div class="col-md-8">@Html.DisplayFor(model => model.Clientes.Nombre)</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Habitación:</div>
                <div class="col-md-8">@Html.DisplayFor(model => model.Habitaciones.tipo)</div>
            </div>
        </div>
        <div class="card-footer text-end">
            <a href="@Url.Action("Edit", new { id = Model.ID_reserva })" class="btn btn-warning">Editar</a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </div>
</div>
