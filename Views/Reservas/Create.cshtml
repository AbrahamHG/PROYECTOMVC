@model PROYECTOMVC.Models.Reservas

@{
    ViewBag.Title = "Crear Reserva";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title">Crear Nueva Reserva</h2>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label fw-bold">@Html.LabelFor(model => model.Cliente_ID)</label>
                    @Html.DropDownList("Cliente_ID", null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Cliente_ID, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">@Html.LabelFor(model => model.Habitacion_ID)</label>
                    @Html.DropDownList("Habitacion_ID", null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Habitacion_ID, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">@Html.LabelFor(model => model.CheckIN)</label>
                    @Html.EditorFor(model => model.CheckIN, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CheckIN, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">@Html.LabelFor(model => model.CheckOUT)</label>
                    @Html.EditorFor(model => model.CheckOUT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CheckOUT, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">@Html.LabelFor(model => model.Estatus)</label>
                    @Html.CheckBoxFor(model => model.Estatus ?? false, new { @class = "form-check-input" })
                    @Html.ValidationMessageFor(model => model.Estatus, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex justify-content-end">
                    <input type="submit" value="Crear" class="btn btn-primary me-2" />
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
