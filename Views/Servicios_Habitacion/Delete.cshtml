@model PROYECTOMVC.Models.Servicios_Habitacion

@{
    ViewBag.Title = "Eliminar Servicio de Habitación";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h2 class="card-title">Eliminar Servicio de Habitación</h2>
        </div>
        <div class="card-body">
            <h5 class="text-center text-danger">¿Estás seguro de que deseas eliminar este servicio de habitación?</h5>
            <p class="text-center text-muted">Esta acción no se puede deshacer.</p>
            <hr />

            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Fecha del Servicio:</div>
                <div class="col-md-8">@Html.DisplayFor(model => model.Fecha_Servicio)</div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Empleado:</div>
                <div class="col-md-8">@Html.DisplayFor(model => model.Empleados.Nombre)</div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Habitación:</div>
                <div class="col-md-8">@Html.DisplayFor(model => model.Habitaciones.tipo)</div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Servicio:</div>
                <div class="col-md-8">@Html.DisplayFor(model => model.Servicios.Servicio)</div>
            </div>
        </div>
        <div class="card-footer text-end">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger me-2">Eliminar</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
            }
        </div>
    </div>
</div>
