@model IEnumerable<PROYECTOMVC.Models.Servicios_Habitacion>

@{
    ViewBag.Title = "Lista de Servicios de Habitación";
}

<h2 class="text-center">Lista de Servicios de Habitación</h2>

<p class="text-end">
    @Html.ActionLink("Agregar Nuevo Servicio", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Fecha_Servicio)</th>
            <th>@Html.DisplayNameFor(model => model.Empleados.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Habitaciones.tipo)</th>
            <th>@Html.DisplayNameFor(model => model.Servicios.Servicio)</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Fecha_Servicio)</td>
                <td>@Html.DisplayFor(modelItem => item.Empleados.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Habitaciones.tipo)</td>
                <td>@Html.DisplayFor(modelItem => item.Servicios.Servicio)</td>
                <td class="text-center">
                    @Html.ActionLink("Editar", "Edit", new { id = item.ID_ServHab }, new { @class = "btn btn-warning btn-sm" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.ID_ServHab }, new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_ServHab }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
