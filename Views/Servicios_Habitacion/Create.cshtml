@model PROYECTOMVC.Models.Servicios_Habitacion

@{
    ViewBag.Title = "Crear Servicio de Habitación";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title">Crear Nuevo Servicio de Habitación</h2>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label fw-bold">@Html.LabelFor(model => model.Habitacion_ID, "Habitación")</label>
                    @Html.DropDownList("Habitacion_ID", null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Habitacion_ID, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">@Html.LabelFor(model => model.Servicio_ID, "Servicio")</label>
                    @Html.DropDownList("Servicio_ID", null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Servicio_ID, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">@Html.LabelFor(model => model.Empleado_ID, "Empleado")</label>
                    @Html.DropDownList("Empleado_ID", null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Empleado_ID, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">@Html.LabelFor(model => model.Fecha_Servicio, "Fecha del Servicio")</label>
                    @Html.EditorFor(model => model.Fecha_Servicio, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Fecha_Servicio, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex justify-content-end">
                    <input type="submit" value="Crear" class="btn btn-primary me-2" />
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
